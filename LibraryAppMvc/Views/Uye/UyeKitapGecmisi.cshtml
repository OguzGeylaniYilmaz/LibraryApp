@using LibraryAppMvc.Models.Entity
@model List<Hareketler>
@{
    ViewBag.Title = "UyeKitapGecmisi";
    Layout = "~/Views/Shared/_OriginalLayout.cshtml";
}

<h2 style="text-align:center;margin-top:15px"><i>Üye Kitap Geçmişi</i></h2>
<br />
<table class="table table-condensed">
    <tr>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Kitaplar.KitapAd</td>
            <td>@x.Personeller.PersonelAd</td>
            <td>@Convert.ToDateTime(x.AlisTarih).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(x.IadeTarih).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>
